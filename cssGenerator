<!-- ********************************************************js for label*********************************************************************** -->
<script type="text/javascript">
	var labelFontSize;
	var labelColor;
	var labelBackgroundColor;
	var labelFontStyle = "normal";
	var labelAlign = "left";
	var labelFontWeight = "normal";
	var labelLetterSpacing;
	var labelWordSpacing;
	var labelTextIndent;
	var labelTextDecoration = "none";
	var labelWhiteSpace = "normal";
	var labelTextShadow1;
	var labelTextShadow2;
	var labelTextShadow3;
	var labelTextShadowColor;

	function initLabelFunction(){
		labelFontSize = document.getElementById("labelFontSize").value;
		labelColor = document.getElementById("labelColor").value;
		labelBackgroundColor = document.getElementById("labelBackgroundColor").value;
		// labelFontStyle
		// labelAlign
		// labelFontWeight
		labelLetterSpacing = document.getElementById("labelLetterSpacing").value;
		labelWordSpacing = document.getElementById("labelWordSpacing").value;
		labelTextIndent = document.getElementById("labelTextIndent").value;
		// labelTextDecoration
		// labelWhiteSpace

		var labelInitParams1 = "{\n" + "font-size: " + labelFontSize + "px;\n" + "color: " + labelColor + ";\n" + "background-color: " + labelBackgroundColor + ";\n";
		var labelInitParams2 = "font-style: " + labelFontStyle + ";\n" + "text-align: " + labelAlign + ";\n" + "font-weight: " + labelFontWeight + ";\n";
		var labelInitParams3 = "letter-spacing: " + labelLetterSpacing + "px;\n" + "word-spacing: " + labelWordSpacing + "px;\n" + "text-indent: " + labelTextIndent + "cm;\n";
		var labelInitParams4 = "text-decoration: " + labelTextDecoration + ";\n" + "white-space: " + labelWhiteSpace + ";\n}";

		var labelInitParams = labelInitParams1 + labelInitParams2 + labelInitParams3 + labelInitParams4;
		document.getElementById("codeLabelArea").value = labelInitParams;

	}

	function giveLabelName(){
		var labelName = document.getElementById("labelName").value;
		document.getElementById("label").innerHTML = labelName;

		initLabelFunction();
	}

	function giveLabelFontSize(){
		labelFontSize = document.getElementById("labelFontSize").value;
		document.getElementById("label").style.fontSize = parseInt(labelFontSize) + "px";

		initLabelFunction();
	}

	function giveLabelColor(){
		labelColor = document.getElementById("labelColor").value;
		document.getElementById("label").style.color = labelColor;

		initLabelFunction();
	}

	function giveLabelBackgroundColor(){
		labelBackgroundColor = document.getElementById("labelBackgroundColor").value;
		document.getElementById("label").style.backgroundColor = labelBackgroundColor;

		initLabelFunction();
	}

	function giveLabelFontStyleNormal(){
		labelFontStyle = "normal";
		document.getElementById("label").style.fontStyle = "normal";

		initLabelFunction();
	}

	function giveLabelFontStyleItalic(){
		labelFontStyle = "italic";
		document.getElementById("label").style.fontStyle = "italic";

		initLabelFunction();
	}

	function giveLabelFontStyleOblique(){
		labelFontStyle = "oblique";
		document.getElementById("label").style.fontStyle = "oblique";

		initLabelFunction();
	}

	function giveLabelAlignLeft(){
		labelAlign = "left";
		document.getElementById("label").style.textAlign = "left";

		initLabelFunction();
	}

	function giveLabelAlignCenter(){
		labelAlign = "center";
		document.getElementById("label").style.textAlign = "center";

		initLabelFunction();
	}

	function giveLabelAlignRight(){
		labelAlign = "right";
		document.getElementById("label").style.textAlign = "right";

		initLabelFunction();
	}

	function giveLabelFontWeightNormal(){
		labelFontWeight = "normal";
		document.getElementById("label").style.fontWeight = "normal";

		initLabelFunction();
	}

	function giveLabelFontWeightLighter(){
		labelFontWeight = "lighter";
		document.getElementById("label").style.fontWeight = "lighter";

		initLabelFunction();
	}

	function giveLabelFontWeightBold(){
		labelFontWeight = "bold";
		document.getElementById("label").style.fontWeight = "bold";

		initLabelFunction();
	}

	function giveLabelFontWeightBolder(){
		labelFontWeight = "bolder";
		document.getElementById("label").style.fontWeight = "bolder";

		initLabelFunction();
	}

	function giveLabelLetterSpacing(){
		labelLetterSpacing = document.getElementById("labelLetterSpacing").value;
		document.getElementById("label").style.letterSpacing = parseInt(labelLetterSpacing) + "px";

		initLabelFunction();
	}

	function giveLabelWordSpacing(){
